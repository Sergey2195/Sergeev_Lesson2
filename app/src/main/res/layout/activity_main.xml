<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/changeToEnglishButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/english_button_name"
        app:layout_constraintBottom_toTopOf="@+id/changeToRuButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginVertical="4dp"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/changeToRuButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/russian_button_name"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/changeToEnglishButton"
        android:layout_marginVertical="4dp"/>

    <Button
        android:id="@+id/goToSecondActivityBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="@string/go_to_second_activity_button"
        android:layout_marginBottom="32dp"/>
    <TextView
        android:id="@+id/firstActivityTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="@string/default_text"
        android:layout_marginTop="32dp"
        android:layout_marginHorizontal="12dp"
        android:textSize="30sp"/>
</androidx.constraintlayout.widget.ConstraintLayout>