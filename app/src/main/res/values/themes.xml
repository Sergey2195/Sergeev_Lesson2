<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sergeev_Lesson2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="WatchViewDefaultStyle">
        <item name="hour_color">@color/black</item>
        <item name="minutes_color">@color/red</item>
        <item name="seconds_color">@color/blue</item>
        <item name="hour_width">8.0</item>
        <item name="minutes_width">6.0</item>
        <item name="seconds_width">3.0</item>
        <item name="hour_ratio">0.4</item>
        <item name="minutes_ratio">0.6</item>
        <item name="seconds_ratio">0.8</item>
    </style>
</resources>